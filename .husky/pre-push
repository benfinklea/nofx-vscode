#!/bin/sh

# Pre-push hook for NofX VS Code Extension
# Comprehensive validation before pushing to remote

echo "ğŸš€ Running pre-push validation..."
echo "This may take a few minutes..."

# Run all tests (which includes compilation via pretest)
echo "ğŸ§ª Running test suite..."
npm test || {
    echo "âŒ Tests failed. Please fix failing tests before pushing."
    exit 1
}

# Check code coverage (if available)
echo "ğŸ“Š Checking code coverage..."
if grep -q "test:coverage" package.json; then
    npm run test:coverage || {
        echo "âš ï¸  Coverage check failed. Continuing anyway..."
    }
else
    echo "âš ï¸  Coverage check not configured. Skipping..."
fi

# Package extension with clean build
echo "ğŸ“¦ Creating VSIX package (clean build)..."
npm run build:clean || {
    echo "âŒ Failed to create VSIX package. Please fix errors before pushing."
    exit 1
}

# Dynamically resolve VSIX filename from package.json
PACKAGE_NAME=$(node -e "console.log(require('./package.json').name)")
PACKAGE_VERSION=$(node -e "console.log(require('./package.json').version)")
VSIX_PATTERN="${PACKAGE_NAME}-*.vsix"
EXPECTED_VSIX="${PACKAGE_NAME}-${PACKAGE_VERSION}.vsix"

# Validate the package (using glob pattern)
VSIX_FILE=$(ls ${VSIX_PATTERN} 2>/dev/null | head -n 1)
if [ -n "$VSIX_FILE" ]; then
    echo "âœ… VSIX package created successfully: $VSIX_FILE"
    
    # Check package size
    size=$(stat -f%z "$VSIX_FILE" 2>/dev/null || stat -c%s "$VSIX_FILE" 2>/dev/null)
    if [ "$size" -lt 10000 ]; then
        echo "âš ï¸  Warning: VSIX package seems too small (${size} bytes)"
    fi
else
    echo "âŒ VSIX package not found (expected pattern: ${VSIX_PATTERN})"
    exit 1
fi

# Run linting (if available)
echo "ğŸ” Running linter..."
if grep -q '"lint"' package.json; then
    npm run lint || {
        echo "âš ï¸  Linting failed. Consider fixing lint issues."
    }
else
    echo "âš ï¸  Linting not configured. Skipping..."
fi

# Final validation
echo "âœ… Running final validation..."
if [ "$OS" = "Windows_NT" ] || [ "$(uname -s | grep -c MINGW)" -ne 0 ] || [ "$(uname -s | grep -c CYGWIN)" -ne 0 ]; then
    echo "âš ï¸  Windows detected. Checking for PowerShell support..."
    
    # Try PowerShell first (preferred for Windows)
    if command -v pwsh >/dev/null 2>&1; then
        echo "   Using PowerShell for validation..."
        pwsh -NoProfile -File scripts/validate-build.ps1 || {
            echo "âŒ Final validation failed."
            exit 1
        }
    # Try powershell.exe if pwsh not available
    elif command -v powershell >/dev/null 2>&1; then
        echo "   Using Windows PowerShell for validation..."
        powershell -NoProfile -File scripts/validate-build.ps1 || {
            echo "âŒ Final validation failed."
            exit 1
        }
    # Fallback to npm script if in Git Bash/MINGW with bash available
    elif [ -n "$BASH_VERSION" ]; then
        echo "   Using npm script validation (Git Bash detected)..."
        npm run validate:build 2>/dev/null || {
            echo "âš ï¸  Build validation skipped - shell support missing"
            echo "   Please ensure out/extension.js exists and is valid"
        }
    else
        echo "âš ï¸  Build validation skipped - no compatible shell found"
        echo "   Please ensure out/extension.js exists and is valid"
    fi
else
    ./scripts/validate-build.sh || {
        echo "âŒ Final validation failed."
        exit 1
    }
fi

echo "âœ… All pre-push validations passed!"
echo "ğŸ“¤ Ready to push to remote repository"